# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fullstack_template
POSTGRES_HOST=postgres_fullstack
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_HOST=redis_fullstack
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASS=redis_pswd
REDIS_URL=redis://${REDIS_PASS}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# AI Providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=1

# Development
DEV_UVICORN_RELOAD=true

# Environment
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# Docker Compose - Image versions
COMPOSE_POSTGRES_VERSION=16-alpine
COMPOSE_REDIS_VERSION=7-alpine
COMPOSE_BACKEND_VERSION=latest

# Docker Compose - Port mappings
COMPOSE_POSTGRES_PORTS=5555
COMPOSE_REDIS_PORTS=6380
COMPOSE_BACKEND_PORTS=8000

# Docker Compose - Volume mappings
COMPOSE_POSTGRES_DATA=postgres_data
COMPOSE_REDIS_DATA=redis_data
